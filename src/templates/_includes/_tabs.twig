{% set tabs = {
    latest: { url: url('splashing-images'), label: '⏱ Latest'},
} %}

{% if search is defined %}
    {% set tabs = tabs|merge({
        search: { url: url('splashing-images/search'), label: '🔍️️ Search' },
    }) %}
{% endif %}

{% if lastSearch is defined %}
    {% set searchTab = {
        lastSearch: { label: "Last search: "|t ~ lastSearch, url: url('splashing-images/search?q=' ~ lastSearch)},
    } %}
    {% set tabs = tabs|merge(searchTab) %}
{% endif %}

{% include '_includes/tabs' with { tabs: tabs, selectedTab: selectedTab } %}